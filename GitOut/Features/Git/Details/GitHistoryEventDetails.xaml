<UserControl x:Class="GitOut.Features.Git.Details.GitHistoryEventDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitOut.Features.Git.Details"
             xmlns:converters="clr-namespace:GitOut.Features.Wpf.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullOrEmptyToCollapsedConverter x:Key="NullOrEmptyToCollapsedConverter" />
        <Style x:Key="DetailsHeaderStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource NormalTextStyle}">
            <Setter Property="Margin" Value="8 4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>
        <Style x:Key="DetailsBodyStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource NormalTextStyle}">
            <Setter Property="Margin" Value="4 8" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <DataTemplate x:Key="DefaultBranchTemplate">
            <Border
                BorderThickness="0"
                CornerRadius="4"
                Padding="4 2"
                Background="{DynamicResource MaterialBackgroundBackground}"
            >
            <TextBlock
                FontSize="10"
                Text="{Binding Name}"
            />
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid
        Background="{DynamicResource PrimaryHueLightBrush}"
        Style="{StaticResource LayoutRootGridStyle}"
    >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="8 4"
            FontSize="12"
            FontStyle="Italic"
            Text="{Binding GitHistoryEvent.Body, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            Visibility="{Binding GitHistoryEvent.Body, Converter={StaticResource NullOrEmptyToCollapsedConverter}, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            Style="{StaticResource DetailsBodyStyle}"
        >
        </TextBlock>

        <ItemsControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="8 4"
            ItemsSource="{Binding GitHistoryEvent.Branches, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            ItemTemplate="{Binding BranchTemplate, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
        >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>


        <TextBlock
            Grid.Row="2"
            Text="Author:"
            Style="{StaticResource DetailsHeaderStyle}"
        />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Style="{StaticResource DetailsBodyStyle}"
        >
            <Run Text="{Binding GitHistoryEvent.Author.Name, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}" />
            <Run Text="&lt;" /><Run Text="{Binding GitHistoryEvent.Author.Email, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"/><Run Text="&gt;" />
        </TextBlock>

        <TextBlock
            Grid.Row="3"
            Text="Date:"
            Style="{StaticResource DetailsHeaderStyle}"
        />
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding GitHistoryEvent.AuthorDate,StringFormat=G, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            Style="{StaticResource DetailsBodyStyle}"
        />

        <TextBlock
                Grid.Row="4"
                Text="Sha:"
                VerticalAlignment="Center"
                Style="{StaticResource DetailsHeaderStyle}"
            />

        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            VerticalAlignment="Center"
            Orientation="Horizontal"
        >
            <TextBlock
                VerticalAlignment="Center"
                FontSize="14"
                FontFamily="Consolas Code"
                Text="{Binding GitHistoryEvent.Id.Hash, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                Style="{StaticResource DetailsBodyStyle}"
            />
            <Viewbox
                Height="32"
                Width="32"
            >
                <Button
                    Focusable="False"
                    Command="{Binding CopyHashCommand, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                    CommandParameter="{Binding CopyHashCommandParameter, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                    Style="{StaticResource MaterialButtonStyle}"
                >
                    <Path Fill="{DynamicResource MaterialForegroundBase}" Data="{StaticResource ContentCopy}" />
                </Button>
            </Viewbox>
        </StackPanel>

    </Grid>
</UserControl>
