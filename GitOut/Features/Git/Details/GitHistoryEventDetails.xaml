<UserControl x:Class="GitOut.Features.Git.Details.GitHistoryEventDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitOut.Features.Git.Details"
             xmlns:converters="clr-namespace:GitOut.Features.Wpf.Converters"
             xmlns:wpf="clr-namespace:GitOut.Features.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullToVisibilityMultiConverter x:Key="NullToVisibilityMultiConverter" />
        <converters:NullOrEmptyToCollapsedConverter x:Key="NullOrEmptyToCollapsedConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:SubstringConverter x:Key="GitCommitSubstringConverter" />
        <Style x:Key="DetailsHeaderStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource NormalTextStyle}">
            <Setter Property="Margin" Value="8 4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="TextAlignment" Value="Left" />
        </Style>
        <Style x:Key="DetailsBodyStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource NormalTextStyle}">
            <Setter Property="Margin" Value="0 4" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <DataTemplate x:Key="DefaultBranchTemplate">
            <Border
                BorderThickness="0"
                CornerRadius="4"
                Padding="4 2"
                Background="{DynamicResource MaterialBackgroundBackground}"
            >
            <TextBlock
                FontSize="10"
                Text="{Binding Name}"
            />
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid
        Background="{DynamicResource PrimaryHueLightBrush}"
        Style="{StaticResource LayoutRootGridStyle}"
    >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
 

        <TextBlock
            Grid.Row="0"
            Text="Author:"
            Style="{StaticResource DetailsHeaderStyle}"
        />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource DetailsBodyStyle}"
        >
            <!-- this weird syntax is due to WPF interpreting new lines as a white space -->
            <Run Text="{Binding
                GitHistoryEvent.Author.Name,
                Mode=OneWay,
                RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            /> <Run Text="&lt;" /><Run Text="{Binding
                GitHistoryEvent.Author.Email,
                Mode=OneWay,
                RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            /><Run Text="&gt;" />
        </TextBlock>

        <TextBlock
            Grid.Row="1"
            Text="Date:"
            Style="{StaticResource DetailsHeaderStyle}"
        />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding GitHistoryEvent.AuthorDate,StringFormat=G, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            Style="{StaticResource DetailsBodyStyle}"
        />

        <TextBlock
            Grid.Row="2"
            Text="Sha:"
            VerticalAlignment="Center"
            Style="{StaticResource DetailsHeaderStyle}"
        />

        <wpf:CopyableCommandText
            Grid.Row="2"
            Grid.Column="1"
            FontFamily="Cascadia Code"
            Text="{Binding
                GitHistoryEvent.Id.Hash,
                Converter={StaticResource GitCommitSubstringConverter},
                ConverterParameter=7,
                RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            ToolTip="{Binding GitHistoryEvent.Id.Hash, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            TextStyle="{StaticResource DetailsBodyStyle}"
            CopyCommand="{Binding CopyHashCommand, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            CopyCommandParameter="{Binding GitHistoryEvent, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
        />

        <TextBlock
            Grid.Row="3"
            Text="Parents:"
            Style="{StaticResource DetailsHeaderStyle}"
            
        >
            <TextBlock.Visibility>
                <MultiBinding Converter="{StaticResource NullToVisibilityMultiConverter}">
                    <Binding
                        Path="GitHistoryEvent.Parent"
                        RelativeSource="{RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}"
                    />
                    <Binding
                        Path="GitHistoryEvent.MergedParent"
                        RelativeSource="{RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}"
                    />
                </MultiBinding>
            </TextBlock.Visibility>
        </TextBlock>
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="3"
            Grid.Column="1"
        >
            <wpf:CopyableCommandText
                Margin="0 0 8 0"
                FontFamily="Cascadia Code"
                Visibility="{Binding
                    GitHistoryEvent.Parent,
                    Converter={StaticResource NullToVisibilityConverter},
                    RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}
                }"
                RouteCommand="{Binding GoToParentCommand, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                CopyCommand="{Binding CopyHashCommand, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                CopyCommandParameter="{Binding GitHistoryEvent.Parent, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                Text="{Binding 
                    GitHistoryEvent.Parent.Id.Hash,
                    Converter={StaticResource GitCommitSubstringConverter},
                    ConverterParameter=7,
                    RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}
                }"
                TextStyle="{StaticResource DetailsBodyStyle}"
            />
            <wpf:CopyableCommandText
                FontFamily="Cascadia Code"

                Visibility="{Binding
                    GitHistoryEvent.MergedParent,
                    Converter={StaticResource NullToVisibilityConverter},
                    RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}
                }"
                RouteCommand="{Binding GoToMergedParentCommand, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                CopyCommand="{Binding CopyHashCommand, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                CopyCommandParameter="{Binding GitHistoryEvent.MergedParent, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                Text="{Binding 
                    GitHistoryEvent.MergedParent.Id.Hash,
                    Converter={StaticResource GitCommitSubstringConverter},
                    ConverterParameter=7,
                    RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}
                }"
                TextStyle="{StaticResource DetailsBodyStyle}"
            />
        </StackPanel>


        <TextBlock
            Grid.Row="4"
            Text="Branches:"
            VerticalAlignment="Center"
            Style="{StaticResource DetailsHeaderStyle}"
        />
        <ItemsControl
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0 4"
            ItemsSource="{Binding GitHistoryEvent.Branches, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
            ItemTemplate="{Binding BranchTemplate, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
        >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        
        <TextBlock
            Grid.Row="6"
            Grid.ColumnSpan="3"
            Text="Details:"
            VerticalAlignment="Center"
            Style="{StaticResource DetailsHeaderStyle}"
        />
        <Border
            Grid.Row="7"
            Grid.ColumnSpan="4"
            BorderThickness="0 0 0 0"
            CornerRadius="2"
            Margin="8 0"
            BorderBrush="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
        >
            <TextBlock
                Margin="8 4"
                Text="{Binding GitHistoryEvent.Body, RelativeSource={RelativeSource AncestorType={x:Type local:GitHistoryEventDetails}}}"
                Style="{StaticResource DetailsBodyStyle}"
            />

        </Border>

    </Grid>
</UserControl>
