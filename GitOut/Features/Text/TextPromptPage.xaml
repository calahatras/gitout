<UserControl
  x:Class="GitOut.Features.Text.TextPromptPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:GitOut.Features.Text"
  mc:Ignorable="d"
  d:DesignHeight="110"
  d:DesignWidth="500"
  d:DataContext="{d:DesignInstance Type={x:Type local:TextPromptViewModel}}"
>
  <Grid Style="{StaticResource LayoutRootGridStyle}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBox
      x:Name="FileNameInput"
      Style="{StaticResource MaterialFormInputStyle}"
      AutomationProperties.HelpText="{Binding Prompt, Mode=OneTime}"
      Text="{Binding StartValue, Mode=OneTime}"
    />
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Style="{StaticResource MaterialButtonStyle}" Command="{Binding CancelCommand}"
        >CANCEL</Button
      >
      <Button
        Style="{StaticResource MaterialButtonStyle}"
        Content="{Binding ConfirmButtonText}"
        Command="{Binding SetResultCommand}"
        CommandParameter="{Binding Text, ElementName=FileNameInput}"
      />
    </StackPanel>
  </Grid>
</UserControl>
