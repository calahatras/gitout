<UserControl
    x:Class="GitOut.Features.ReleaseNotes.MarkdownViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GitOut.Features.ReleaseNotes"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
>
    <ScrollViewer>
        <TextBox
            AcceptsReturn="True"
            FontFamily="Cascadia Code"
            FontSize="12"
            Style="{StaticResource MaterialFormAreaStyle}"
            Text="{Binding MarkdownText, RelativeSource={RelativeSource AncestorType={x:Type local:MarkdownViewer}}}"
        />
    </ScrollViewer>
</UserControl>
